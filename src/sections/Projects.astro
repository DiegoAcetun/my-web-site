---
import Card from "../components/Card.astro";

const projects = [
  {
    title: "Buscador de películas, series y juegos",
    description: "Aplicación desarollada en react consumiendo la API OMDb",
    link: "https://diegoacetun-movie-app.netlify.app/",
    iconColor: "text-blue-500",
    icon: "fluent:movies-and-tv-16-filled",
    isProject: true,
  },
  {
    title: "Reproductor Web",
    description:
      "Reproductor de música desarrollado con Django, consumiendo una api desarrollada con Flask.",
    link: "https://github.com/d-acetun/ReproductorWeb",
    iconColor: "text-green-500",
    icon: "carbon:data-player",
    isProject: true,
  },
  {
    title: "Generador de imágenes pixel art",
    description:
      "Generador de imágenes pixel art a través de carga de un archivo en un formato en específico, empleando un analizador léxico para su lectura.",
    link: "https://github.com/d-acetun/GENERADOR-IMG-PIXELART",
    iconColor: "text-indigo-700",
    icon: "pixelarticons:coin",
    isProject: true,
  },
  {
    title: "Control de productos",
    description:
      "Aplicación de escritorio desarrollada con python, tkinter y mysql para llevar un control de productos",
    link: "https://github.com/d-acetun/ControlDeProductos",
    iconColor: "text-zinc-600",
    icon: "bi:clipboard-check",
    isProject: true,
  },
  {
    title: "Reproductor de música",
    description:
      "Aplicación de escritorio desarrollada con python y tkinter implementando listas enlazadas circulares para crear las listas de reproducción",
    link: "https://github.com/d-acetun/ReproductorDeMusicaPython",
    iconColor: "",
    icon: "icon-park:folder-music",
    isProject: true,
  },
];
---

<div
  id="projects"
  class="sm:scroll-mt-16 scroll-mt-14 mt-5"
  data-aos="fade-down"
>
  <p
    class="md:m-5 sm:text-6xl text-4xl text-center text-violet-800 dark:text-violet-300"
  >
    Algunos proyectos que he desarrollado
  </p>
  <div class="flex flex-wrap justify-center items-center">
    {
      projects.map(
        ({ title, description, link, iconColor, icon, isProject }) => (
          <Card
            title={title}
            description={description}
            link={link}
            iconColor={iconColor}
            icon={icon}
            isProject={isProject}
          />
        )
      )
    }
  </div>
</div>
